@model IEnumerable<WEProjectUniversitySearchPortal.Models.University>


@using (Html.BeginForm("AllUniversities", "University", FormMethod.Post))
{
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <b>Filter</b>@Html.TextBox("uniSearch")
            <input type="submit" value="Search" class="btn btn-default" />
        </div>
    </div>
}
<section class="bg-light">
    <div class="container py-5">
        <div class="row text-center py-3">
            <div class="col-lg-6 m-auto">
                <h1 class="h1">Most Searched Universities</h1>
                <p>
                    These are the cities that are mostly searched.................
                   
                </p>
            </div>
        </div>
        <div class="row">

            @foreach (var item in Model)
            {

                <div class="col-12 col-md-4 mb-4">
                    <div class="card h-100">
                        <img src=@item.path class="card-img-top" alt="..." height="200" width="300">
                        <div class="card-body">

                            <b class="card-title">@item.name</b>
                            <p class="card-text">
                                @item.location<br />
                                @item.registered
                            </p>
                            <p class="btn btn-secondary">
                                @Html.ActionLink("Select", "SelectedUniversity",new { uniId=item.u_id,uname=item.name})
                            </p>

                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>
